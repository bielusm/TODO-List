{
  "name": "todo",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "heroku-prebuild": "export NODE_ENV=development && set cd client && npm install && cd server && npm install",
    "heroku-postbuild": "export NODE_ENV=production",
    "build": "cd client && npm run build:prod",
    "start": "cd server && npm run start",
    "client": "cd client && npm run start",
    "server": "cd server && npm run server",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "cd server && npm test && cd ../client && npm test"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "jest": "^25.1.0"
  },
  "dependencies": {}
}
